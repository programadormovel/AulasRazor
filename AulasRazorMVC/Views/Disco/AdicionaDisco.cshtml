@model AulasRazorMVC.Models.Disco
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="pt-br">
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="UTF-8">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@1,6..12,300&display=swap" rel="stylesheet">

    <title>AdicionaDisco</title>
</head>
<body class="container-fluid">
    <div>
        <form method="post">
            <fieldset style="width: 50%; border:groove; border-color:magenta; background-color:lightblue">
                <legend style="font-size:medium; color:navy; background-color:gold">Adicionar Disco</legend>
                <div>
                    <label for="disco">Nome do Disco:</label>
                    <input type="text" id="disco" name="disco" value="" />
                </div>
                <div>
                    <label for="artista">Nome do Artista:</label>
                    @Html.EditorFor(model => model.artista)
                </div>
                <div>
                    <label for="faixas">Quantidade de Faixas:</label>
                    @Html.EditorFor(model => model.faixas)
                </div>
                <div>
                    <br />
                    <input type="submit" value="Adicionar" class="submit" />
                </div>
            </fieldset>
        </form>

        <div>
            @Html.ActionLink("Voltar para a Lista", "Index")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
</body>
</html>
